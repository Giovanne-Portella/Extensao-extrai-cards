{
  "manifest_version": 3,
  "name": "Extrator de Cards do Azure",
  "version": "2.0",
  "description": "Extrai, filtra e abre cards de um quadro do Azure DevOps.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs" 
  ],
  "host_permissions": [
    "https://dev.azure.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://dev.azure.com/*/_boards/board*"],
      "js": ["content.js"]
    }
  ]
}